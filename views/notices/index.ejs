<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>NOTICES</h1>

            <!-- <h3><a href="/notices/new">Make new notice</a></h3> -->
            <% for(let notice of allNotices) { %>
                <div class="card my-3">
                    <div class="card-header">
                        <%= notice.author %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= notice.title %>
                        </h5>
                        <a href="notices/<%= notice._id %> " class="btn btn-primary">Details</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>